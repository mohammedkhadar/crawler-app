modules = ["nodejs-20", "go", "postgresql-16"]

[nix]
channel = "stable-24_05"
packages = ["sqlite"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Install Go Dependencies"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Backend Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend Development Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Test Suite"

[[workflows.workflow]]
name = "Install Go Dependencies"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "go mod tidy"

[[workflows.workflow]]
name = "Backend Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "CGO_ENABLED=1 go run main.go"
waitForPort = 8000

[[workflows.workflow]]
name = "Frontend Development Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx webpack serve --mode development"
waitForPort = 5000

[[workflows.workflow]]
name = "Test Suite"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm test"

[[ports]]
localPort = 80
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 8000
externalPort = 80

[deployment]
deploymentTarget = "cloudrun"
